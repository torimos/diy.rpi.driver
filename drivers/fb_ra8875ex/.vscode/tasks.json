{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "command": "sh",
    "isShellCommand": true,
    "args": ["-c"],
    "showOutput": "always",
    "declares": [
        {
            "name": "make-compile",
            "owner": "c",
            "fileLocation": "relative",
            "pattern": [
                {
                    "regexp": "^((.*): Entering directory `(.*)'|(.*))$",
                    "filePrefix": 3
                },
                {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            ]
        }
    ],
    "tasks": [
        {
            "taskName": "make",
            "echoCommand": false,
            "args": [
                "./build.sh"
            ],
            "suppressTaskName": true,
            "isBuildCommand": true,
            "problemMatcher": "$make-compile"
        }
    ]
}